
local settings = build.current_settings();
for _, architecture in ipairs(settings.architectures) do
    build.all {
        build.Executable ("cmdline_test", architecture) {
            libraries = {
                "sweet/cmdline/cmdline",
                "sweet/error/error",
                "sweet/assert/assert",
                "unit/libUnitTest"
            };

            build.Cxx (architecture) {
                "main.cpp",
                "TestParser.cpp",
                "TestSplitter.cpp"
            };
        };
    };
end
