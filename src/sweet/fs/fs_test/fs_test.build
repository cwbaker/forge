
local settings = build.push_settings {
    architectures = { "x86_64" };
};

for _, architecture in ipairs(settings.architectures) do
    build.Executable ("fs_test", architecture) {
        libraries = {
            "boost/libs/filesystem/src/boost_filesystem",
            "boost/libs/system/src/boost_system",
            "sweet/assert/assert", 
            "sweet/error/error",
            "sweet/fs/fs",
            "sweet/fs/fs_lua/fs_lua",
            "lua/liblua",
            "unit/libUnitTest"
        };

        build.Cxx (architecture) {
            precompiled_header = "stdafx.hpp";
            "main.cpp",
            "TestLuaFs.cpp",
            "TestPath.cpp",
            "TestWidePath.cpp"
        };
    };
end

build.pop_settings();
