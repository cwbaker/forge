
buildfile "pointer_test/pointer_test.build";

local settings = build.current_settings();
for _, architecture in ipairs(settings.architectures) do
    Library ("pointer", architecture) {
        libraries = {
            "sweet/assert/assert",
            "sweet/error/error"
        };

        Cxx (architecture) {
            precompiled_header = "stdafx.hpp";
            "ReferenceCount.cpp"
        };
    };
end
