
Executable "build_tool_test" {
    settings = {
        architectures = { "x86_64" };        
    };

    libraries = {    
        "boost/libs/filesystem/src/boost_filesystem",
        "boost/libs/system/src/boost_system",
        "sweet/build_tool/build_tool",
        "sweet/cmdline/cmdline",
        "sweet/lua/lua",
        "sweet/persist/persist",
        "sweet/thread/thread",
        "sweet/path/path",
        "sweet/process/process",
        "sweet/rtti/rtti",
        "sweet/pointer/pointer",
        "lua/liblua",
        "sweet/error/error",
        "sweet/assert/assert",
        "unit/libUnitTest"
    };

    Cxx {
        -- Disable automatic linking to Boost libraries.
        defines = { "BOOST_ALL_NO_LIB" };
        pch = "stdafx.hpp";
        "main.cpp",
        "ErrorChecker.cpp",
        "FileChecker.cpp",
        "TestDirectoryApi.cpp",
        "TestGraph.cpp",
        "TestPostorder.cpp",
        "TestPreorder.cpp",
        "TestScanner.cpp"
    };
}
