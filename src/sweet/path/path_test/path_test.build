        libraries = {
            "sweet/assert/assert", 
            "sweet/error/error",
            "sweet/path/path",
            "unit/libUnitTest"
        };

        Cxx (architecture) {
            precompiled_header = "stdafx.hpp";
            "main.cpp",
            "TestPath.cpp",
            "TestWidePath.cpp"
        };
    };
end
