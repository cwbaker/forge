
for _, forge in forge:default_builds("cc_.*") do 
    local forge = forge:configure {
        warning_level = 0;
        defines = { 
            -- Disable automatic linking to Boost libraries.
            "BOOST_ALL_NO_LIB" 
        };
    };

    forge:Library '${lib}/boost_system_${architecture}' {
        forge:Cxx '${obj}/%1' {
            "error_code.cpp"
        };
    };
end
