
local settings = build:push_settings {
    warning_level = 0;
    defines = { 
        -- Disable automatic linking to Boost libraries.
        "BOOST_ALL_NO_LIB" 
    };
};

for _, architecture in ipairs(settings.architectures) do 
    build:Library ("boost_system", architecture) {
        build:Cxx (architecture) {
            "error_code.cpp"
        };
    };
end

build:pop_settings();
