
for _, build in build:default_builds("cc_.*") do 
    local build = build:configure {
        warning_level = 0;
        defines = { 
            -- Disable automatic linking to Boost libraries.
            "BOOST_ALL_NO_LIB" 
        };
    };

    build:Library '${lib}/boost_system_${architecture}' {
        build:Cxx '${obj}/%1' {
            "error_code.cpp"
        };
    };
end
