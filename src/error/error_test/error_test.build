
for _, forge in forge:default_builds("cc_.*") do 
    forge:all {
        forge:Executable '${bin}/error_test_${architecture}' {
            '${lib}/error_${architecture}';
            '${lib}/assert_${architecture}';
            '${lib}/UnitTest++_${architecture}';

            forge:Cxx '${obj}/%1' {
                precompiled_header = "stdafx.hpp";
                "main.cpp"
            };
        };
    };
end
