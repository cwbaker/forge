
buildfile "cmdline_test/cmdline_test.build";

for _, forge in forge:default_builds("cc_.*") do
    forge:Library '${lib}/cmdline_${architecture}' {
        forge:Cxx '${obj}/%1' {
            "AddOption.cpp",
            "Error.cpp",
            "Option.cpp",
            "Parser.cpp",
            "Splitter.cpp"
        };
    };
end
