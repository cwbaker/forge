    "version": "0.2.0",
    "configurations": [
        {
            "name": "debug/forge",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/debug/bin/forge.exe",
            "args": ["variant=release"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": true
        },
        {
            "name": "release/forge",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/release/bin/forge.exe",
            "args": ["-r", ".", "variant=release"],
            "stopAtEntry": false,
            "cwd": "D:\\source\\reyes\\src\\unittest-cpp",
            "environment": [],
            "externalConsole": true
        },
        {
            "name": "attach",
            "type": "cppvsdbg",
            "request": "attach",
            "processId": "${command:pickProcess}"
        }
    ]
}
